[Unit]
Description=Chmasta Telegram Bot
After=network.target

[Service]
User=root
WorkingDirectory=/root/chmasta
ExecStart=/root/chmasta/masta/bin/python bot.py

# ğŸ” Restart behavior
Restart=always
RestartSec=5

# (Optional but recommended)
StartLimitIntervalSec=60
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
